<?xml version='1.0' encoding='utf-8'?>
<widget id="com.legyes.p1race" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>P1race</name>
    <description>P1race RSS app</description>
    <author email="legyes@legyes.hu" href="http://legyes.hu">
        Takács - LeGyEs - József
    </author>
    <content src="index.html" />
    <access origin="*" />

    <access origin="content:///*" />

    <allow-navigation href="data:*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-android-permissions" spec="~0.10.0" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.0" />
</widget>
